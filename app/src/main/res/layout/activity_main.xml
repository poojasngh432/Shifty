<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black_bg"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/title"
            android:text="Gabber !"
            android:textSize="54sp"
            android:textStyle="bold|italic"
            android:textColor="@color/light_grey_silver"
            android:fontFamily="@font/chiller"
            android:layout_margin="8dp"
            android:padding="8dp" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/welcome"
            tools:text="@string/welcome_text"
            android:textStyle="bold"
            android:textColor="@color/light_grey_silver"
            android:fontFamily="serif"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_margin="26dp"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/api2delay"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/setdelay2text"
                android:text="API-2 delay: "
                android:textColor="@color/light_grey_silver"
                android:fontFamily="serif"
                android:padding="8dp" />
            <EditText
                android:id="@+id/setdelay2ET"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:hint="Available shifts delay(ms)"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/api3delay"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/setdela3ytext"
                android:text="API-3 delay: "
                android:textColor="@color/light_grey_silver"
                android:fontFamily="serif"
                android:padding="8dp" />
            <EditText
                android:id="@+id/setdelay3ET"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:hint="Grab shift delay(ms)"
                android:inputType="number" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/startStopBtn"
            android:background="@color/orange_stop"
            android:text="START"
            android:textStyle="bold"
            android:textColor="@color/light_grey_silver"
            android:fontFamily="serif"
            android:layout_margin="16dp"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/logout_imageview">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/shiftsNum"
            tools:text="0"
            android:textSize="65sp"
            android:textStyle="normal"
            android:textColor="@color/light_grey_silver"
            android:fontFamily="serif"
            android:layout_marginRight="8dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/shifts"
            android:text="Shifts added "
            android:textStyle="normal"
            android:textColor="@color/light_grey_silver"
            android:fontFamily="serif"
            android:layout_gravity="bottom"/>
    </LinearLayout>

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/logout_imageview"
        android:background="@drawable/ic_logout"
        android:layout_margin="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>